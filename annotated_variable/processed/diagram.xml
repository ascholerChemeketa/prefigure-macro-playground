<?xml version="1.0"?>
<diagram xmlns:author="http://example.org" dimensions="(300,200)" margins="5">
    <!-- xmlns:author="http://example.org" needed to define the author namespace -->

    <!-- reverse y-axis back to normal SVG (0 is top) -->
    <coordinates bbox="(0,200,300,0)">

        <!-- author:variable is an author defined "macro" that will be expanded     -->
        <!-- by an XSLT stylesheet into a collection of standard PreFigure elements -->

        <label text="main" anchor="(30, 30)">main</label>
        <rectangle at="stack-frame-main" lower-left="(50, 20)" dimensions="(150, 90)" stroke="blue" thickness="1"/>

        <group font="monospace" at="variable-x"><label anchor="(70, 30 + 20 / 2)" alignment="west">x</label><rectangle lower-left="(70, 30)" dimensions="(120, 20)" stroke="black" thickness="1"/><label at="variable-x-value" anchor="(70 + 120 / 2,30 + 20 / 2)" alignment="c">10</label></group>

        <group font="monospace" at="variable-y"><label anchor="(70, 55 + 20 / 2)" alignment="west">y</label><rectangle lower-left="(70, 55)" dimensions="(120, 20)" stroke="black" thickness="1"/><label at="variable-y-value" anchor="(70 + 120 / 2,55 + 20 / 2)" alignment="c">5</label></group>

        <group font="monospace" at="variable-z"><label anchor="(70, 80 + 20 / 2)" alignment="west">z</label><rectangle lower-left="(70, 80)" dimensions="(120, 20)" stroke="black" thickness="1"/><label at="variable-z-value" anchor="(70 + 120 / 2,80 + 20 / 2)" alignment="c">135</label></group>

    </coordinates>

    <annotations>
        <annotation ref="stack-frame-main" text="stack frame for main">
            <!-- we will rely on the variable macro generating @at attributes based on variable names   -->
            <!-- these will be fleshed out by the macro - we explicitly represent them so that variable -->
            <!-- annotations are correctly nested in any other structure                                -->
            <annotation ref="variable-x" text="The variable x"><annotation ref="variable-x-value" text="The value of x is 10"/></annotation>
            <annotation ref="variable-y" text="The variable y"><annotation ref="variable-y-value" text="The value of y is 5"/></annotation>
            <annotation ref="variable-z" text="The variable z"><annotation ref="variable-z-value" text="The value of z is 135"/></annotation>
        </annotation>
    </annotations>
</diagram>
