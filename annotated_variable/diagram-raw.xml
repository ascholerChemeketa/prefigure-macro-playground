<?xml version="1.0" encoding="UTF-8"?>

<diagram dimensions="(300,200)"
         margins="5"
         xmlns:author="http://example.org">
    <!-- xmlns:author="http://example.org" needed to define the author namespace -->

    <!-- reverse y-axis back to normal SVG (0 is top) -->
    <coordinates bbox="(0,200,300,0)">

        <!-- author:variable is an author defined "macro" that will be expanded     -->
        <!-- by an XSLT stylesheet into a collection of standard PreFigure elements -->

        <label text="main" anchor="(30, 30)">main</label>
        <rectangle at="stack-frame-main" lower-left="(50, 20)" dimensions="(150, 90)" stroke="blue" thickness="1"/>

        <author:variable name="x"
                         value="10"
                         anchor="(70, 30)"/>

        <author:variable name="y"
                         value="5" 
                         anchor="(70, 55)"/>

        <author:variable name="z"
                         value="135"
                         anchor="(70, 80)"/>

    </coordinates>

    <annotations>
        <annotation ref="stack-frame-main" text="stack frame for main">
            <!-- we will rely on the variable macro generating @at attributes based on variable names   -->
            <!-- these will be fleshed out by the macro - we explicitly represent them so that variable -->
            <!-- annotations are correctly nested in any other structure                                -->
            <author:variable-annotation ref="variable-x"/>
            <author:variable-annotation ref="variable-y"/>
            <author:variable-annotation ref="variable-z"/>
        </annotation>
    </annotations>
</diagram>